# Docker Compose Environment Variables
# Copy this to .env and fill with your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=call_flow_engine_dev

# Application Database URL (for development)
DATABASE_URL=ecto://postgres:postgres@postgres:5432/call_flow_engine_dev

# Asterisk ARI Configuration
ARI_URL=ws://asterisk:8088/ari/events
ARI_USER=asterisk
ARI_PASSWORD=asterisk
ARI_APP_NAME=callflow_elixir

# Bitrix24 Webhook
BITRIX_WEBHOOK_URL=https://your-bitrix.bitrix24.com/rest/1/xyz/

# Phoenix Secret (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=dev_secret_key_base_at_least_64_bytes_long_please_change_in_production

# Logging
LOG_LEVEL=info

# Phoenix Host (for production)
PHX_HOST=localhost
